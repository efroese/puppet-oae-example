ompatibility: whitetank

totem {
   version: 2
   secauth: off
   threads: 0
   interface {
       ringnumber:  <%= scope.lookupvar('pacemaker::corosync::ringnumber') %>
       bindnetaddr: <%= scope.lookupvar('pacemaker::corosync::bindnetaddr') %>
       mcastaddr:   <%= scope.lookupvar('pacemaker::corosync::mcastaddr') %>
       mcastport:   <%= scope.lookupvar('pacemaker::corosync::mcastport') %>
   }
}

logging {
   fileline: off
   to_stderr: yes
   to_logfile: yes
   to_syslog: yes
   logfile: /var/log/corosync.log
   debug: off
   timestamp: on
   logger_subsys {
      subsys: AMF
      debug: off
   }
}

amf {
   mode: disabled
}
aisexec {
   user: root
   group: root
}
service {
   # Load the Pacemaker Cluster Resource Manager
   name: pacemaker
   ver: 1
}     
