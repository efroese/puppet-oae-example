MAILTO=""

CSV_DIR=<%= scope.lookupvar('sis::batch::csv_dir') %>

# set correct permissions
chown -fR "rsmart:rsmart" /home/ucb_sis/*csv
chown -fR "rsmart:rsmart" /home/ucd_sis/*csv
chown -fR "rsmart:rsmart" /home/ucm_sis/*csv
chown -fR "rsmart:rsmart" /home/ucb_sis/test/*
chown -fR "rsmart:rsmart" /home/ucd_sis/test/*
chown -fR "rsmart:rsmart" /home/ucm_sis/test/*

# temporary: copy UCD & UCM prod files to test also (will get overwritten if anything is uploaded to test)
scp -p /home/ucd_sis/*.UCD.csv	        rsmart@oipp-cle1:/files-cle/files/sis/test
scp -p /home/ucm_sis/*.UCMerced.csv	    rsmart@oipp-cle1:/files-cle/files/sis/test
scp -p /home/ucb_sis/*.UCB.csv	        rsmart@oipp-cle1:/files-cle/files/sis/test

scp -p /home/ucd_sis/*csv		        ucd_sis@oipp-test:/home/ucd_sis
scp -p /home/ucm_sis/*csv		        ucm_sis@oipp-test:/home/ucm_sis
scp -p /home/ucb_sis/*csv		        ucb_sis@oipp-test:/home/ucb_sis
# end temporary

# copy test user file to prod server for OAE user creation
scp -p /home/ucb_sis/test/*.UCB.csv      rsmart@oipp-cle1:/files-cle/files/sis/test
scp -p /home/ucd_sis/test/*.UCD.csv      rsmart@oipp-cle1:/files-cle/files/sis/test
scp -p /home/ucm_sis/test/*.UCMerced.csv rsmart@oipp-cle1:/files-cle/files/sis/test

# copy all test csv files to test server
scp -p /home/ucb_sis/test/* ucb_sis@oipp-test:/home/ucb_sis/test && rm -f /home/ucb_sis/test/*
scp -p /home/ucd_sis/test/* ucd_sis@oipp-test:/home/ucd_sis/test && rm -f /home/ucd_sis/test/*
scp -p /home/ucm_sis/test/* ucm_sis@oipp-test:/home/ucm_sis/test && rm -f /home/ucm_sis/test/*

# copy all prod csv files to prod CLE server
scp -p /home/ucb_sis/*csv rsmart@oipp-cle1:/files-cle/files/sis
scp -p /home/ucd_sis/*csv rsmart@oipp-cle1:/files-cle/files/sis
scp -p /home/ucm_sis/*csv rsmart@oipp-cle1:/files-cle/files/sis

# copy all prod csv files to prod OAE server and remove files
scp -p /home/ucb_sis/*csv rsmart@oipp-prod-app1:$CSV_DIR && rm -f /home/ucb_sis/*csv
scp -p /home/ucd_sis/*csv rsmart@oipp-prod-app1:$CSV_DIR && rm -f /home/ucd_sis/*csv
scp -p /home/ucm_sis/*csv rsmart@oipp-prod-app1:$CSV_DIR && rm -f /home/ucm_sis/*csv